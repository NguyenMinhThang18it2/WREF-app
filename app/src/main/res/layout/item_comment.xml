<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUser"
        android:paddingRight="10dp"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anh1"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_card"
            android:backgroundTint="#F1F1F1"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Minh Thắng"
                android:textStyle="bold"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txtComment"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello ae"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/color_text"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/lnlImgComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:maxHeight="180dp"
                android:adjustViewBounds="true"
                app:riv_corner_radius_bottom_left="4dp"
                app:riv_corner_radius_bottom_right="4dp"
                app:riv_corner_radius_top_left="4dp"
                app:riv_corner_radius_top_right="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">
            <TextView
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 giờ"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/color_text"
                android:textSize="12dp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thích"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/color_text"
                android:textSize="12dp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trả lời"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/color_text"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chia sẽ"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/color_text"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
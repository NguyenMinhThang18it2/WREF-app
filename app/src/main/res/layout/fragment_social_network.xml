<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main.SocialNetworkFragment"
    android:background="#C9EBEB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">
                <!--     Stories   -->
                <RelativeLayout
                    android:id="@+id/RelaStories"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:elevation="8dp"
                        android:background="@drawable/shadow_linearlayout">
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true"
                            android:scrollbars="none">
                            <LinearLayout
                                android:descendantFocusability="blocksDescendants"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:clipToPadding="false">
                                    <RelativeLayout
                                        android:layout_width="110dp"
                                        android:elevation="5dp"
                                        android:layout_height="170dp"
                                        android:background="@drawable/shadow_linearlayout">
                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:id="@+id/imgStories"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/anh1"
                                            app:riv_border_width="0.1dip"
                                            app:riv_border_color="#333333"
                                            android:scaleType="centerCrop"
                                            app:riv_corner_radius="30dip"
                                            app:riv_mutate_background="true"
                                            app:riv_tile_mode="clamp"
                                            app:riv_corner_radius_bottom_left="10dp"
                                            app:riv_corner_radius_bottom_right="10dp"
                                            app:riv_corner_radius_top_left="10dp"
                                            app:riv_corner_radius_top_right="10dp"/>
                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/imgUserStories"
                                            android:layout_margin="7dp"
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            app:civ_border_width="3dp"
                                            app:civ_border_color="@color/blue"
                                            android:src="@drawable/anh2"/>
                                        <TextView
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginBottom="10dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:textSize="13sp"
                                            android:textColor="@color/white"
                                            android:fontFamily="sans-serif-medium"
                                            android:text="Nguyễn Minh Thắng"
                                            />
                                    </RelativeLayout>
                                </LinearLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcvStories"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </RelativeLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </RelativeLayout>
                <!--                -->

                <!--       News         -->
                <LinearLayout
                    android:layout_below="@+id/RelaStories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</FrameLayout>
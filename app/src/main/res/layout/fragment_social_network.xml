<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main.SocialNetworkFragment"
    android:background="#C9EBEB">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/SlidingUpPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="0dp"
        app:umanoShadowHeight="4dp"
        app:umanoDragView="@id/rltSliding"
        app:umanoOverlay="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants">
                    <!--     Stories   -->
                    <RelativeLayout
                        android:id="@+id/RelaStories"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="10dp"
                            android:elevation="8dp"
                            android:background="@drawable/shadow_linearlayout">
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true"
                                android:scrollbars="none">
                                <LinearLayout
                                    android:descendantFocusability="blocksDescendants"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_height="match_parent"
                                        android:padding="5dp"
                                        android:clipToPadding="false">
                                        <RelativeLayout
                                            android:layout_width="110dp"
                                            android:elevation="5dp"
                                            android:layout_height="170dp"
                                            android:background="@drawable/shadow_linearlayout">
                                            <com.makeramen.roundedimageview.RoundedImageView
                                                android:id="@+id/imgStories"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/anh1"
                                                app:riv_border_width="0.1dip"
                                                app:riv_border_color="#333333"
                                                android:scaleType="centerCrop"
                                                app:riv_corner_radius="30dip"
                                                app:riv_mutate_background="true"
                                                app:riv_tile_mode="clamp"
                                                app:riv_corner_radius_bottom_left="10dp"
                                                app:riv_corner_radius_bottom_right="10dp"
                                                app:riv_corner_radius_top_left="10dp"
                                                app:riv_corner_radius_top_right="10dp"/>
                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/imgUserStories"
                                                android:layout_margin="7dp"
                                                android:layout_width="45dp"
                                                android:layout_height="45dp"
                                                app:civ_border_width="3dp"
                                                app:civ_border_color="@color/blue"
                                                android:src="@drawable/anh2"/>
                                            <TextView
                                                android:layout_alignParentBottom="true"
                                                android:layout_marginBottom="10dp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="90dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="13sp"
                                                android:textColor="@color/white"
                                                android:fontFamily="sans-serif-medium"
                                                android:text="Nguyễn Minh Thắng"
                                                />
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rcvStories"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--                -->
                    <RelativeLayout
                        android:layout_below="@+id/RelaStories"
                        android:id="@+id/PostNewNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:clipToPadding="false">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:elevation="8dp"
                            android:background="@drawable/shadow_linearlayout">
                            <RelativeLayout
                                android:id="@+id/topPostNewNews"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_centerVertical="true"
                                    android:id="@+id/avataUserPostNew"
                                    android:layout_marginRight="10dp"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    app:civ_border_overlay="true"
                                    android:src="@drawable/anh4"/>
                                <LinearLayout
                                    android:id="@+id/btnPostNewNews"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@+id/avataUserPostNew"
                                    android:layout_centerVertical="true">
                                    <TextView
                                        android:layout_gravity="center"
                                        android:id="@+id/txtPostNew"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:hint="Hôm nay bạn thế nào ?"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <View
                                android:layout_below="@+id/topPostNewNews"
                                android:id="@+id/hrBelowTopPostNewNews"
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/colorCircle"/>
                            <RelativeLayout
                                android:layout_below="@+id/hrBelowTopPostNewNews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:id="@+id/btnImages"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ic_baseline_image_24"
                                            android:backgroundTint="@color/green"
                                            android:layout_marginRight="10dp"/>
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"
                                            android:text="Đăng hình"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="0.1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorCircle"/>
                                    <LinearLayout
                                        android:id="@+id/btnVide"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ic_baseline_videocam_24"
                                            android:backgroundTint="@color/icon_video"
                                            android:layout_marginRight="10dp"/>
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/black"
                                            android:textSize="14sp"
                                            android:text="Đăng video"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="0.1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorCircle"/>
                                    <LinearLayout
                                        android:id="@+id/btnMauNen"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ic_baseline_color_lens_24"
                                            android:backgroundTint="@color/icon_color_lens"
                                            android:layout_marginRight="10dp"/>
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="14sp"
                                            android:textColor="@color/black"
                                            android:text="Hình nền"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <!--       News         -->
                    <LinearLayout
                        android:layout_below="@+id/PostNewNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvNews"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/rltSliding"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/storiesViewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragmentCommnet"
                android:background="@drawable/borderradius_topleft_topright"/>
        </RelativeLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</FrameLayout>